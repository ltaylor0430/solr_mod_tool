@import '../styles'
@import url(http://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700);

html
body
  height 100%

body
  font-family 'Roboto', sans-serif
  background-color bg-color
  *
    box-sizing border-box
nav
    height nav-height
    background-color header-color
    .logo
      span(1/8)
      color white
      font-size 1.8rem
      cursor pointer
    ul
      list-style none
      margin 0
      padding 0
      line-height 1
      display block
      zoom 1
      font-size 0
      li
        display inline-block
        padding 0
        margin 0
        a
          color #fff
          font-weight 700
          text-transform uppercase
          font-size 14px
          font-family 'Open Sans', sans-serif
          transition color .25s;

input
  outline none
  background bg-color
  width 100%
input[type="text"]
  padding: 10px
  border: none
  border-bottom: solid 2px #c9c9c9
  transition: border 0.3s

input[type="text"]:focus,
input[type="text"].focus
  border-bottom: solid 2px #969696

button, .button
  border none
  color #F5F5F5
  outline none
  border none
  border-radius 2px
  background-color primary-color
  color white
  text-transform uppercase
  text-align center
  min-width 88px
  min-height 36px
  overflow hidden
  user-select none
  vertical-align middle
  position relative
  padding 0px 6px
  white-space nowrap
  cursor pointer
  font-weight 500
  user-select none
  font-size 14px
  line-height 30px
  &[disabled]
  &.disabled
  :disabled
    background-color white !important//shade(primary-color, 20%)
    color text-disabled-color
    box-shadow none !important

button:hover
  background #238FFB
