@import '../../../styles'
.schemaUI
  center()
.title
  center(600px)
  text-align center
  h1
    font-size 3rem
  h3
    font-size 2rem
  *
    font-weight 300
form
  padding 10px 16px
  border 2px solid
  border-color #D4D4D4
  border-radius 7px
.itemContainer
  max-height 400px
  overflow-y auto
  overflow-x hidden
  background-color white
  .items
    span(1/3)
    background-color white
    margin-bottom tb-margin
    position relative
    text-align right
    button
      padding 2px
      min-width 24px
      min-height 12px

.solrfields
  center()
  text-align left

.newItem
  font-style italic
  color green